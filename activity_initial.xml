<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#4bdff5"
    tools:context=".Initial">

    <EditText

        android:inputType="text"
        android:id="@+id/initialId"
        android:layout_width="300dp"
        android:layout_height="50dp"
       android:hint="@string/name_text3"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/searchButtonId"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/name_text4"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:background="#550c4e68"
        android:textColor="#01060b"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

</LinearLayout>